<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_default"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    tools:context="fr.cdsm.leagueofesportv2.fragment.FragmentAuthentification">

    <EditText
        android:id="@+id/et_mail_auth"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorLink="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/et_password_auth"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_mail_auth"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorLink="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/btn_auth"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_password_auth"
        android:layout_marginTop="30dp"
        android:onClick="connexionCompte"
        android:text="Se Connecter" />

    <Button
        android:id="@+id/btn_sub"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_auth"
        android:layout_alignBottom="@+id/btn_auth"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:onClick="goInscription"
        android:text="S'inscrire" />

    <Button
        android:id="@+id/btn_forgot"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_auth"
        android:layout_marginTop="30dp"
        android:onClick="forgotPassword"
        android:text="Mot de Passe OubliÃ©" />

</RelativeLayout>
